---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Timeline from '../../components/projects/Timeline';

// Import project data
import projectMeta from '../../content/projects/arbitragevault-bookfinder/meta.json';

const { title, tagline, description, demoUrl, githubUrl, techStack, metrics, phases, challenges } = projectMeta;

// Flatten tech stack for display
const allTech = Object.entries(techStack).flatMap(([category, techs]) =>
  (techs as string[]).map(tech => ({ tech, category }))
);

const categoryColors: Record<string, string> = {
  frontend: 'bg-blue-500/10 text-blue-600 border-blue-200 dark:text-blue-400 dark:border-blue-800',
  backend: 'bg-green-500/10 text-green-600 border-green-200 dark:text-green-400 dark:border-green-800',
  database: 'bg-purple-500/10 text-purple-600 border-purple-200 dark:text-purple-400 dark:border-purple-800',
  auth: 'bg-orange-500/10 text-orange-600 border-orange-200 dark:text-orange-400 dark:border-orange-800',
  testing: 'bg-red-500/10 text-red-600 border-red-200 dark:text-red-400 dark:border-red-800',
  deployment: 'bg-cyan-500/10 text-cyan-600 border-cyan-200 dark:text-cyan-400 dark:border-cyan-800',
  apis: 'bg-yellow-500/10 text-yellow-600 border-yellow-200 dark:text-yellow-400 dark:border-yellow-800',
  tools: 'bg-pink-500/10 text-pink-600 border-pink-200 dark:text-pink-400 dark:border-pink-800'
};
---

<BaseLayout
  title={`${title} - Portfolio`}
  description={description}
>
  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden">
    <!-- Background gradient -->
    <div class="absolute inset-0 bg-gradient-to-b from-[var(--color-bg-secondary)] to-transparent"></div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 animate-fade-in">
        <!-- Back link -->
        <a
          href="/"
          class="inline-flex items-center gap-2 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors mb-8"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Home
        </a>

        <!-- Status Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-500/10 text-green-600 text-sm font-medium mb-6">
          <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
          Production Ready
        </div>

        <h1 class="font-display text-4xl sm:text-5xl md:text-6xl font-bold text-[var(--color-text-primary)] mb-4">
          {title}
        </h1>

        <p class="text-xl text-[var(--color-text-secondary)] mb-8">
          {tagline}
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={demoUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary inline-flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            View Live Demo
          </a>
          <a
            href={githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary inline-flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
            </svg>
            View Source
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Overview Section -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <!-- Description -->
        <div class="space-y-6">
          <h2 class="font-display text-3xl font-bold text-[var(--color-text-primary)]">
            Overview
          </h2>
          <p class="text-lg text-[var(--color-text-secondary)] leading-relaxed">
            {description}
          </p>
          <div class="prose prose-lg text-[var(--color-text-secondary)]">
            <p>
              ArbitrageVault automates the entire book sourcing workflow - from discovering
              profitable opportunities to tracking purchases and analyzing performance. Built
              with a focus on reliability, scalability, and user experience.
            </p>
          </div>
        </div>

        <!-- Metrics Grid -->
        <div class="grid grid-cols-2 gap-4">
          <div class="card-vault p-6 text-center">
            <div class="font-display text-4xl font-bold text-[var(--color-accent)] mb-2">
              {metrics.testsCount}
            </div>
            <div class="text-sm text-[var(--color-text-muted)]">Tests Passing</div>
          </div>
          <div class="card-vault p-6 text-center">
            <div class="font-display text-4xl font-bold text-[var(--color-accent)] mb-2">
              {metrics.phasesCount}
            </div>
            <div class="text-sm text-[var(--color-text-muted)]">Dev Phases</div>
          </div>
          <div class="card-vault p-6 text-center">
            <div class="font-display text-4xl font-bold text-[var(--color-accent)] mb-2">
              {metrics.endpointsCount}
            </div>
            <div class="text-sm text-[var(--color-text-muted)]">API Endpoints</div>
          </div>
          <div class="card-vault p-6 text-center">
            <div class="font-display text-4xl font-bold text-[var(--color-accent)] mb-2">
              {metrics.uptime}
            </div>
            <div class="text-sm text-[var(--color-text-muted)]">Uptime</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Tech Stack Section -->
  <section class="py-16 bg-[var(--color-bg-secondary)]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <span class="inline-block px-3 py-1 rounded-full bg-[var(--color-accent)]/10 text-[var(--color-accent)] text-sm font-medium mb-4">
          Technology
        </span>
        <h2 class="font-display text-3xl font-bold text-[var(--color-text-primary)]">
          Tech Stack
        </h2>
      </div>

      <div class="flex flex-wrap justify-center gap-3">
        {allTech.map(({ tech, category }) => (
          <span
            class={`px-4 py-2 rounded-full text-sm font-medium border ${categoryColors[category] || 'bg-gray-500/10 text-gray-600 border-gray-200'}`}
          >
            {tech}
          </span>
        ))}
      </div>

      <!-- Category Legend -->
      <div class="flex flex-wrap justify-center gap-4 mt-8 text-xs text-[var(--color-text-muted)]">
        {Object.keys(categoryColors).map(cat => (
          <span class="flex items-center gap-1.5">
            <span class={`w-3 h-3 rounded-full ${categoryColors[cat].split(' ')[0]}`}></span>
            {cat.charAt(0).toUpperCase() + cat.slice(1)}
          </span>
        ))}
      </div>
    </div>
  </section>

  <!-- Timeline Section -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <span class="inline-block px-3 py-1 rounded-full bg-[var(--color-accent)]/10 text-[var(--color-accent)] text-sm font-medium mb-4">
          Development Journey
        </span>
        <h2 class="font-display text-3xl font-bold text-[var(--color-text-primary)]">
          13 Phases of Development
        </h2>
        <p class="mt-3 text-[var(--color-text-secondary)] max-w-2xl mx-auto">
          Click on any phase to see details about what was built and the key highlights.
        </p>
      </div>

      <Timeline phases={phases} client:load />
    </div>
  </section>

  <!-- Challenges Section -->
  <section class="py-16 bg-[var(--color-bg-secondary)]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <span class="inline-block px-3 py-1 rounded-full bg-[var(--color-accent)]/10 text-[var(--color-accent)] text-sm font-medium mb-4">
          Problem Solving
        </span>
        <h2 class="font-display text-3xl font-bold text-[var(--color-text-primary)]">
          Challenges Overcome
        </h2>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {challenges.map((challenge: any) => (
          <div class="card-vault p-8">
            <h3 class="font-display text-xl font-semibold text-[var(--color-text-primary)] mb-4">
              {challenge.title}
            </h3>
            <div class="space-y-4 text-sm">
              <div>
                <span class="font-semibold text-[var(--color-text-muted)]">Context:</span>
                <p class="text-[var(--color-text-secondary)] mt-1">{challenge.context}</p>
              </div>
              <div>
                <span class="font-semibold text-[var(--color-text-muted)]">Solution:</span>
                <p class="text-[var(--color-text-secondary)] mt-1">{challenge.solution}</p>
              </div>
              <div>
                <span class="font-semibold text-green-600">Outcome:</span>
                <p class="text-[var(--color-text-secondary)] mt-1">{challenge.outcome}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl font-bold text-[var(--color-text-primary)] mb-6">
        Interested in the Methodology?
      </h2>
      <p class="text-lg text-[var(--color-text-secondary)] mb-8">
        Learn about the Zero-Tolerance Engineering practices, MCP servers, and development
        workflows used to build this project.
      </p>
      <a href="/methodology" class="btn-primary inline-flex items-center gap-2 group">
        Explore Methodology
        <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
