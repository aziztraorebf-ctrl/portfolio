---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Import project data
import projectMeta from '../../content/projects/prompt-process-vault/meta.json';

const { title, tagline, description, demoUrl, githubUrl, techStack, features, aiHighlight, categories, roadmap } = projectMeta;

// Flatten tech stack for display
const allTech = Object.entries(techStack).flatMap(([category, techs]) =>
  (techs as string[]).map(tech => ({ tech, category }))
);

const categoryColors: Record<string, string> = {
  platform: 'bg-purple-500/10 text-purple-600 border-purple-200 dark:text-purple-400 dark:border-purple-800',
  frontend: 'bg-blue-500/10 text-blue-600 border-blue-200 dark:text-blue-400 dark:border-blue-800',
  backend: 'bg-green-500/10 text-green-600 border-green-200 dark:text-green-400 dark:border-green-800',
  auth: 'bg-orange-500/10 text-orange-600 border-orange-200 dark:text-orange-400 dark:border-orange-800',
  ai: 'bg-pink-500/10 text-pink-600 border-pink-200 dark:text-pink-400 dark:border-pink-800',
  tooling: 'bg-cyan-500/10 text-cyan-600 border-cyan-200 dark:text-cyan-400 dark:border-cyan-800'
};

const featureIcons: Record<string, string> = {
  dashboard: 'M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z',
  prompts: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
  assets: 'M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z',
  frameworks: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01'
};
---

<BaseLayout
  title={`${title} - Portfolio`}
  description={description}
>
  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-[var(--color-bg-secondary)] to-transparent"></div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 animate-fade-in">
        <a
          href="/projects"
          class="inline-flex items-center gap-2 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors mb-8"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Projects
        </a>

        <!-- Badges -->
        <div class="flex flex-wrap justify-center gap-3 mb-6">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-500/10 text-green-600 text-sm font-medium">
            <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
            Live Demo
          </span>
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-purple-500/10 text-purple-600 text-sm font-medium">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Built with Google AI Studio
          </span>
        </div>

        <h1 class="font-display text-4xl sm:text-5xl md:text-6xl font-bold text-[var(--color-text-primary)] mb-4">
          {title}
        </h1>

        <p class="text-xl text-[var(--color-text-secondary)] mb-8 max-w-2xl mx-auto">
          {tagline}
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={demoUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary inline-flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            Try Live Demo
          </a>
          <a
            href={githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary inline-flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
            </svg>
            View Source
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Overview Section -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-display text-3xl font-bold text-[var(--color-text-primary)] mb-6">
          Overview
        </h2>
        <p class="text-lg text-[var(--color-text-secondary)] leading-relaxed">
          {description}
        </p>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-16 bg-[var(--color-bg-secondary)]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <span class="inline-block px-3 py-1 rounded-full bg-[var(--color-accent)]/10 text-[var(--color-accent)] text-sm font-medium mb-4">
          Core Modules
        </span>
        <h2 class="font-display text-3xl font-bold text-[var(--color-text-primary)]">
          Four Pillars of Organization
        </h2>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {features.map((feature: any) => (
          <div class="card-vault p-8 group">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-[var(--color-accent)]/10 flex items-center justify-center flex-shrink-0 group-hover:bg-[var(--color-accent)]/20 transition-colors">
                <svg class="w-6 h-6 text-[var(--color-accent)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={featureIcons[feature.icon] || featureIcons.dashboard} />
                </svg>
              </div>
              <div>
                <h3 class="font-display text-xl font-semibold text-[var(--color-text-primary)] mb-2">
                  {feature.name}
                </h3>
                <p class="text-[var(--color-text-secondary)]">
                  {feature.description}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- AI Highlight Section -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-pink-500/10 text-pink-600 text-sm font-medium mb-4">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            AI-Powered
          </span>
          <h2 class="font-display text-3xl font-bold text-[var(--color-text-primary)] mb-4">
            {aiHighlight.name}
          </h2>
          <p class="text-lg text-[var(--color-text-secondary)] mb-6">
            {aiHighlight.description}
          </p>
          <div class="space-y-3">
            {aiHighlight.capabilities.map((capability: string) => (
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-pink-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-[var(--color-text-secondary)]">{capability}</span>
              </div>
            ))}
          </div>
        </div>

        <div class="card-vault p-8 bg-gradient-to-br from-pink-500/5 to-purple-500/5 border-pink-500/20">
          <div class="text-center">
            <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-gradient-to-br from-pink-500 to-purple-500 flex items-center justify-center">
              <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="font-display text-xl font-semibold text-[var(--color-text-primary)] mb-2">
              Powered by {aiHighlight.model}
            </h3>
            <p class="text-sm text-[var(--color-text-muted)]">
              Google's latest multimodal AI model analyzes images instantly,
              understanding context and generating meaningful metadata.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Tech Stack Section -->
  <section class="py-16 bg-[var(--color-bg-secondary)]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <span class="inline-block px-3 py-1 rounded-full bg-[var(--color-accent)]/10 text-[var(--color-accent)] text-sm font-medium mb-4">
          Technology
        </span>
        <h2 class="font-display text-3xl font-bold text-[var(--color-text-primary)]">
          Tech Stack
        </h2>
        <p class="mt-3 text-[var(--color-text-secondary)]">
          Built entirely within Google AI Studio - a different approach to development
        </p>
      </div>

      <div class="flex flex-wrap justify-center gap-3">
        {allTech.map(({ tech, category }) => (
          <span
            class={`px-4 py-2 rounded-full text-sm font-medium border ${categoryColors[category] || 'bg-gray-500/10 text-gray-600 border-gray-200'}`}
          >
            {tech}
          </span>
        ))}
      </div>

      <!-- Category Legend -->
      <div class="flex flex-wrap justify-center gap-4 mt-8 text-xs text-[var(--color-text-muted)]">
        {Object.keys(categoryColors).map(cat => (
          <span class="flex items-center gap-1.5">
            <span class={`w-3 h-3 rounded-full ${categoryColors[cat].split(' ')[0]}`}></span>
            {cat.charAt(0).toUpperCase() + cat.slice(1)}
          </span>
        ))}
      </div>
    </div>
  </section>

  <!-- Categories Preview -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <span class="inline-block px-3 py-1 rounded-full bg-[var(--color-accent)]/10 text-[var(--color-accent)] text-sm font-medium mb-4">
          Organization
        </span>
        <h2 class="font-display text-3xl font-bold text-[var(--color-text-primary)]">
          Pre-built Categories
        </h2>
        <p class="mt-3 text-[var(--color-text-secondary)]">
          Ready-to-use categories for immediate organization
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <div class="card-vault p-6">
          <h3 class="font-display text-lg font-semibold text-[var(--color-text-primary)] mb-4">
            Prompt Categories
          </h3>
          <div class="flex flex-wrap gap-2">
            {categories.prompts.map((cat: string) => (
              <span class="px-3 py-1 rounded-full bg-blue-500/10 text-blue-600 text-sm">
                {cat}
              </span>
            ))}
          </div>
        </div>

        <div class="card-vault p-6">
          <h3 class="font-display text-lg font-semibold text-[var(--color-text-primary)] mb-4">
            Asset Collections
          </h3>
          <div class="flex flex-wrap gap-2">
            {categories.assets.map((cat: string) => (
              <span class="px-3 py-1 rounded-full bg-green-500/10 text-green-600 text-sm">
                {cat}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Roadmap Section -->
  <section class="py-16 bg-[var(--color-bg-secondary)]">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <span class="inline-block px-3 py-1 rounded-full bg-[var(--color-accent)]/10 text-[var(--color-accent)] text-sm font-medium mb-4">
          Future Plans
        </span>
        <h2 class="font-display text-3xl font-bold text-[var(--color-text-primary)]">
          Roadmap
        </h2>
      </div>

      <div class="space-y-4">
        {roadmap.map((item: string, idx: number) => (
          <div class="flex items-center gap-4 p-4 rounded-lg bg-[var(--color-bg-primary)] border border-[var(--color-border)]">
            <div class="w-8 h-8 rounded-full bg-[var(--color-accent)]/10 flex items-center justify-center text-[var(--color-accent)] font-bold text-sm">
              {idx + 1}
            </div>
            <span class="text-[var(--color-text-secondary)]">{item}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl font-bold text-[var(--color-text-primary)] mb-6">
        See the Difference in Approach
      </h2>
      <p class="text-lg text-[var(--color-text-secondary)] mb-8">
        This project was built with Google AI Studio, while ArbitrageVault was built with
        Claude Code and traditional development. Compare the methodologies.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/projects/arbitragevault-bookfinder" class="btn-secondary inline-flex items-center gap-2">
          View ArbitrageVault
        </a>
        <a href="/methodology" class="btn-primary inline-flex items-center gap-2 group">
          Explore Methodology
          <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
