---
import BaseLayout from '../../layouts/BaseLayout.astro';
import fs from 'node:fs';
import path from 'node:path';

// Read all project meta.json files dynamically
const projectsDir = path.join(process.cwd(), 'src/content/projects');
const projectFolders = fs.readdirSync(projectsDir).filter(f =>
  fs.statSync(path.join(projectsDir, f)).isDirectory()
);

const projects = projectFolders.map(folder => {
  const metaPath = path.join(projectsDir, folder, 'meta.json');
  if (fs.existsSync(metaPath)) {
    const meta = JSON.parse(fs.readFileSync(metaPath, 'utf-8'));
    return { ...meta, slug: folder };
  }
  return null;
}).filter(Boolean).sort((a, b) => {
  // Sort by featured first, then by date
  if (a.featured && !b.featured) return -1;
  if (!a.featured && b.featured) return 1;
  return new Date(b.startDate).getTime() - new Date(a.startDate).getTime();
});

const statusColors: Record<string, string> = {
  production: 'bg-green-500/10 text-green-600 border-green-200',
  development: 'bg-yellow-500/10 text-yellow-600 border-yellow-200',
  archived: 'bg-gray-500/10 text-gray-600 border-gray-200',
  planning: 'bg-blue-500/10 text-blue-600 border-blue-200'
};

const statusLabels: Record<string, string> = {
  production: 'Production',
  development: 'In Development',
  archived: 'Archived',
  planning: 'Planning'
};
---

<BaseLayout
  title="Projects - Portfolio"
  description="Collection of software projects built with AI orchestration and modern development practices."
>
  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-[var(--color-bg-secondary)] to-transparent"></div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 animate-fade-in">
        <a
          href="/"
          class="inline-flex items-center gap-2 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors mb-8"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Home
        </a>

        <h1 class="font-display text-4xl sm:text-5xl md:text-6xl font-bold text-[var(--color-text-primary)] mb-4">
          Projects
        </h1>

        <p class="text-xl text-[var(--color-text-secondary)] max-w-2xl mx-auto">
          A collection of software projects showcasing different technologies,
          approaches, and problem-solving strategies.
        </p>
      </div>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {projects.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-[var(--color-text-muted)]">No projects yet. Check back soon!</p>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {projects.map((project: any) => (
            <a
              href={`/projects/${project.slug}`}
              class="card-vault p-6 group block"
            >
              {/* Status & Featured Badge */}
              <div class="flex items-center justify-between mb-4">
                <span class={`px-2 py-1 rounded-full text-xs font-medium border ${statusColors[project.status] || statusColors.planning}`}>
                  {statusLabels[project.status] || 'Unknown'}
                </span>
                {project.featured && (
                  <span class="flex items-center gap-1 text-xs text-[var(--color-accent)]">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                    Featured
                  </span>
                )}
              </div>

              {/* Title & Tagline */}
              <h2 class="font-display text-xl font-semibold text-[var(--color-text-primary)] mb-2 group-hover:text-[var(--color-accent)] transition-colors">
                {project.title}
              </h2>
              <p class="text-sm text-[var(--color-text-muted)] mb-4">
                {project.tagline}
              </p>

              {/* Description */}
              <p class="text-[var(--color-text-secondary)] text-sm leading-relaxed mb-6 line-clamp-3">
                {project.description}
              </p>

              {/* Tech Stack Preview */}
              <div class="flex flex-wrap gap-2 mb-6">
                {Object.values(project.techStack || {}).flat().slice(0, 5).map((tech: string) => (
                  <span class="px-2 py-1 rounded bg-[var(--color-bg-secondary)] text-xs text-[var(--color-text-muted)]">
                    {tech}
                  </span>
                ))}
                {Object.values(project.techStack || {}).flat().length > 5 && (
                  <span class="px-2 py-1 rounded bg-[var(--color-bg-secondary)] text-xs text-[var(--color-text-muted)]">
                    +{Object.values(project.techStack || {}).flat().length - 5} more
                  </span>
                )}
              </div>

              {/* Metrics Preview */}
              {project.metrics && (
                <div class="grid grid-cols-2 gap-4 pt-4 border-t border-[var(--color-border)]">
                  {Object.entries(project.metrics).slice(0, 2).map(([key, value]: [string, any]) => (
                    <div class="text-center">
                      <div class="font-display text-lg font-bold text-[var(--color-accent)]">
                        {value}
                      </div>
                      <div class="text-xs text-[var(--color-text-muted)] capitalize">
                        {key.replace(/([A-Z])/g, ' $1').trim()}
                      </div>
                    </div>
                  ))}
                </div>
              )}

              {/* View Arrow */}
              <div class="mt-4 flex items-center gap-1 text-sm text-[var(--color-accent)] opacity-0 group-hover:opacity-100 transition-opacity">
                View Case Study
                <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </a>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- Add Project CTA (for you as dev) -->
  <section class="py-16 bg-[var(--color-bg-secondary)]">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-2xl font-bold text-[var(--color-text-primary)] mb-4">
        More Projects Coming Soon
      </h2>
      <p class="text-[var(--color-text-secondary)]">
        This portfolio is continuously updated with new projects and case studies.
      </p>
    </div>
  </section>
</BaseLayout>
